#!/bin/bash

next_level="?(.)*/"
depth=0
execute_loop=true

# help
if [[ $# -eq 0 || $1 == "-help" || $1 == "--help" ]]; then
	echo "depth first recursive cd (very bad) enters hidden directories"
	echo "syntax: dfs dirname [maxdepth (default=3)]"
	execute_loop=false
fi

# default maxdepth
if [[ $# -gt 1 ]]; then
	maxdepth=$2
	if ! [[ "$maxdepth" =~ ^[0-9]+$ ]]; then
		echo "maxdepth (arg 2) must be a number"
		execute_loop=false
	fi
else
	maxdepth=3
fi

# check if target is in pwd
cd "$1" &> /dev/null && execute_loop=false

# main loop
function dfs_rec {
	#check for termination (base case)
	ls -dt --color=no $next_level &> /dev/null || return $?
	[[ $depth -le $maxdepth ]] || return 1

	# check if target found
	ls -dt $next_level | grep "/$1/" && cd "$( ls -dt $next_level | grep "/$1/" | head -n 1)" && return 0	

	# recurse through subdirectories
	depth=$(( $depth + 1 ))
	for i in $( ls -dt $next_level ); do
		echo "$next_level"
		next_level="$i?(.)*/"	
		dfs_rec "$1" && return 0
	done
	depth=$(( $depth - 1 ))
	return 1
}

if [[ $execute_loop == "true" ]]; then
	dfs_rec "$1" || echo "
didn't find anything!  "
fi
