#!/bin/bash

current=$( pwd )
cd ${HOME}/Pictures
touch tmp 

long=$( ls -l )
short=$( ls )
numfiles=$( echo "$long" > tmp | wc -l < tmp)
numfiles=$(( numfiles - 1 ))
long=$( echo "$long" > tmp | tail tmp -n $numfiles )

touch test
while [ $numfiles -gt 0 ] 
do
	line=$( echo "$long" > tmp | tail tmp -n $numfiles | head -n 1 )
	words=( $line )
	bytes=${words[4]}
	if [ $bytes -eq 0 ] ; then
		file=$( echo "$short" > tmp | tail tmp -n $numfiles | head -n 1 )
		rm -f "$file"
	fi
	numfiles=$(( numfiles - 1 ))
done

echo $numfiles >> numfiles
cd $current
