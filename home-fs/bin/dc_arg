#!/bin/bash

[[ $# -gt 0 && $1 == '-q' ]] && quit=yes || quit=no

if [[ $quit == yes ]]; then
	if [[ $# -gt 1 ]]; then
		"$2" &
		disown %1
		xdotool getactivewindow windowkill
	else
		echo "need an argument to run"
	fi
else
	if [[ $# -gt 0 ]]; then
		"$1" &
		disown %1
	else
		echo "need an argument to run"
	fi
fi
